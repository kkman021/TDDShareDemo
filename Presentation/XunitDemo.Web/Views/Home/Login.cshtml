@model XunitDemo.Web.Models.LoginVw
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>登入</legend>
        <ol>
            <li>
                帳號：@Html.TextBoxFor(model => Model.Account)
            </li>
            <li>
                密碼：@Html.TextBoxFor(model => Model.Pwd)
            </li>
        </ol>
        <input type="submit" value="登入" />
    </fieldset>
}

